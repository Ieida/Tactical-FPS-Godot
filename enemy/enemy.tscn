resource_name = "enemy"
script/source = "extends Node3D

var target: Node3D
@export var eyes: Node3D
@export var gun: Gun
@export var bullet: PackedScene

func _ready():
	var m = gun.magazine
	load_mag(m)
	gun.load_magazine(m)
	gun.push_slide()
	
	$Health.depleted.connect(_on_health_depleted)

func _on_vision_target_acquired(t):
	target = t
	gun.press_trigger()

func _on_vision_target_lost():
	target = null
	gun.release_trigger()

func _on_health_depleted():
	process_mode = Node.PROCESS_MODE_DISABLED
	queue_free()

func _process(delta):
	if not target: return
	
	eyes.look_at(target.global_position)
	
	if gun.magazine.get_bullet_count() == 0:
		load_mag(gun.magazine)

#region Testing Purposes
func load_mag(mag: Magazine):
	var rnds_to_full = mag.max_rounds - mag.get_bullet_count()
	for r in rnds_to_full:
		var b = bullet.instantiate()
		mag.add_child.call_deferred(b)
		b.transform = Transform3D()
		mag.load_bullet(b)
#endregion
"

